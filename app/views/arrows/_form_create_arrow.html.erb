<%= form_for Arrow.new, :url => url_for(:controller => 'arrows', :action => 'create') do |f| %>
<%= f.label 'FOR WHO?' %><br />
<%= f.collection_select :user_id, User.where.not(id: current_user.id).order(:name),:id,:name, {}, class: "form-control" %><br />
<%= f.label 'REASON' %><br />
<%= f.text_area :reason, class: 'form-control', id: 'reason' %><br />
<%= f.hidden_field :from_user_id, value: current_user.id %><br />
<%= f.submit 'Send', class: 'btn btn-primary' %>
<% end %>

<script>
    var simplemde = new SimpleMDE({
        element: document.getElementById("reason")
    });
</script>
