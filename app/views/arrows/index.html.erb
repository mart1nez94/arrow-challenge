<div>
  <% @arrows.each do |arrow| %>
    <span><%= arrow.created_at %></span><br />
  <% end %>
  <br />
  <span><%= "Welcome, #{current_user.name}" %></span><br>
  <%= link_to "Sign out", destroy_user_session_path, :method=>'delete' %>
</div>
<!-- Move this div to modal after install bootstrap -->
<div>
  <%= form_for @arrow, :url => url_for(:controller => 'arrows', :action => 'create') do |f| %>
    <%= f.label :user %><br />
    <%= f.collection_select :to_user_id, User.where.not(id: current_user.id).order(:name),:id,:name %><br />
    <%= f.label :reason %><br />
    <%= f.text_area :reason %><br />
    <%= f.hidden_field :user_id, value: current_user.id %><br />
    <%= f.submit 'Send' %>
  <% end %>
</div>
